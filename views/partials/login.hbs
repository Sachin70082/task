	              <input type="password" value="" id="typepass" class="form-control rounded-left" name="upass" placeholder="Password">
	            </div>
              <input type="checkbox" onclick="Toggle()"> Show password
	            <div class="form-group">
	            	<button type="submit" class="form-control btn btn-primary rounded submit px-3">Login</button>
	            </div>
	            <div class="form-group d-md-flex">
					<label>Don't have an account? Register here.</label>
	            	<div class="">
						<a  class="btn btn-warning btn-lg" href="register">Register</a>
				</div>
								
	            </div> 
	          </form>


	        </div>
				</div>
			</div>
		</div>
	</section>

{{#if message}}
<div class="alert alert-success" role="alert">
  {{message}}
</div>
{{/if}}



	
